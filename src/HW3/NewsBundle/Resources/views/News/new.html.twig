{% extends 'UserBundle:Default:home.html.twig' %}

{% block content %}
    <form action="{{ path('news_create') }}" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>{% trans %}News Creation{% endtrans %}</legend>
            <div class="text-error">{{ form_errors(form) }}</div>
            <div class="control-group">
                {{ form_label(form.newsgroup) }}
                <div class="controls">
                    {{ form_widget(form.newsgroup) }}
                </div>
                <div class="text-error">{{ form_errors(form.newsgroup) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.image) }}
                <div class="controls">
                    {{ form_widget(form.image) }}
                </div>
                <div class="text-error">{{ form_errors(form.image) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.title) }}
                <div class="controls">
                    {{ form_widget(form.title) }}
                </div>
                <div class="text-error">{{ form_errors(form.title) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.abstract) }}
                <div class="controls">
                    {{ form_widget(form.abstract) }}
                </div>
                <div class="text-error">{{ form_errors(form.abstract) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.tags) }}
                <div class="controls">
                    {{ form_widget(form.tags) }}
                </div>
                <div class="text-error">{{ form_errors(form.tags) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.content) }}
                <div id="content" class="controls">
                    {{ form_widget(form.content) }}
                </div>
                <div class="text-error">{{ form_errors(form.content) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.selected) }}
                <div class="controls">
                    {{ form_widget(form.selected) }}
                </div>
                <div class="text-error">{{ form_errors(form.selected) }}</div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">{% trans %}create{% endtrans %}</button>
                </div>
            </div>
            {{ form_widget(form._token) }}
        </fieldset>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('news') }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}
