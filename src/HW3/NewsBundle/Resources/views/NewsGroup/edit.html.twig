{% extends 'UserBundle:Default:home.html.twig' %}

{% block content %}
    <form action="{{ path('newsgroup_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <fieldset>
            <legend>Edit News Group</legend>
            <div class="text-error">{{ form_errors(edit_form) }}</div>
            <div class="control-group">
                {{ form_label(edit_form.name) }}
                <div class="controls">
                    {{ form_widget(edit_form.name) }}
                </div>
            </div>
            <div class="control-group">
                {{ form_label(edit_form.level) }}
                <div class="controls">
                    {{ form_widget(edit_form.level) }}
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">edit</button>
                </div>
            </div>
            {{ form_rest(edit_form) }}
        </fieldset>
    </form>
    <ul class="record_actions">
        <li>
            <a href="{{ path('newsgroup') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('newsgroup_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE"/>
                {{ form_widget(delete_form) }}
                <button class="btn" type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
