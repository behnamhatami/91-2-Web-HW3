{% extends 'UserBundle:Default:home.html.twig' %}

{% block content %}
    <h2>NewsGroup</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifier</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Creation Date</th>
                <td>{{ entity.creationdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ entity.level}}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('newsgroup') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('newsgroup_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('newsgroup_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
