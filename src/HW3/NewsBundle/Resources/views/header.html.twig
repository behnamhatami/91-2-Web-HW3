                            </div>
                            <ul>

                        {% for index,post in val['posts'] %}
                            {% if index<7 %}
                                <li><a href="{{ path('__single',{'id':post.id}) }}" target="_blank">{{ post.title }}
                                </a></li>
                            {% endif %}
                        {% endfor %}
                            </ul>
                        </div>
