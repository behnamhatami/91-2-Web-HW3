{% extends 'UserBundle:Default:home.html.twig' %}
{% set _locale = app.request.locale %}

{% block content %}
    <h3>
        {% trans %}Subscription edit{% endtrans %}
    </h3>

    <form action="{{ path('subscription_update', { 'id': entity.id, '_locale': _locale }) }}"
          method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT"/>

        <div class="text-error">{{ form_widget(edit_form) }}</div>
        <p>
            <button type="submit">
                {% trans %}Edit{% endtrans %}
            </button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('subscription', {'_locale': _locale}) }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
        <li>
            <form action="{{ path('subscription_delete', { 'id': entity.id, '_locale': _locale }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE"/>
                {{ form_widget(delete_form) }}
                <button type="submit">{% trans %}Delete{% endtrans %}</button>
            </form>
        </li>
    </ul>
{% endblock %}
