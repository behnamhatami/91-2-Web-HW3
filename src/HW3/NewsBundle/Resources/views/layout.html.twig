{% extends '::base.html.twig' %}
{% set left_align = (app.request.locale == 'en') %}
{% set _locale = app.request.locale %}

{% block stylesheets %}
    <script src="{{ asset('bundles/news/js/library.js') }}"></script>
    <script src="{{ asset('bundles/news/js/jquery-1.9.1.min.js') }}"></script>
	{% stylesheets  'bundles/user/bootstrap/css/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% if left_align %}
        <link rel="stylesheet" href="{{ asset('bundles/news/css/en/style.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/en/Header.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/en/Custom.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/en/ticker-style.css') }}" type="text/css"/>

    {% else %}
        <link rel="stylesheet" href="{{ asset('bundles/news/css/fa/style.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/fa/Header.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/fa/Custom.css') }}" type="text/css"/>
        <link rel="stylesheet" href="{{ asset('bundles/news/css/fa/ticker-style.css') }}" type="text/css"/>
    {% endif %}
    {#{% stylesheets  'Symfony/bundles/news/css/*' filter='cssrewrite' %}#}
    {#<link rel="stylesheet" href="{{ asset_url }}"/>#}
    {#{% endstylesheets %}#}
{% endblock %}
{% block javascripts %}
    {% javascripts '@NewsBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block title %}
    {% trans %}News Agency{% endtrans %}
{% endblock %}


