{% extends 'UserBundle::base.html.twig' %}
{% set left_align = (app.request.locale == 'en') %}
{% block stylesheets %}
    {{ parent() }}
    {% if left_align %}
        {% stylesheets 'bundles/user/css/en/home.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% else %}
        {% stylesheets 'bundles/user/css/fa/home.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endif %}
{% endblock %}

{% block body %}
    <!-- Fixed navbar -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="brand" class="nav brand" href="#">
                    {% trans %}News Management System{% endtrans %}
                </div>
                <div class="nav-collapse collapse">
                    <ul id="user" class="nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-user"></i>
                                {{ app.user.username }}
                                <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('user_show', {'id': app.user.id}) }}">View Profile</a></li>
                                <li><a href="{{ path('user_edit', {'id': app.user.id}) }}">Edit Profile</a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                <li class="divider"></li>
                                <li><a href="{{ path('user', {'id': app.user.id}) }}">List Users</a></li>
                                <li><a href="{{ path('user_edit', {'id': app.user.id}) }}">Create User</a></li>
                        </li>
                        {% endif %}
                        <li class="divider"></li>
                        <li><a href="{{ path('logout') }}">Sign Out</a></li>
                    </ul>
                    </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div id="sidebar" class="span2">
            <div class="well sidebar-nav">
                <ul class="nav nav-list">
                    <li class="nav-header">News</li>
                    <li><a href="{{ path('user_new') }}">Create News</a></li>
                    <li><a href="{{ path('user') }}">My Old News</a></li>
                    <li class="nav-header">News Group</li>
                    <li><a href="{{ path('newsgroup') }}">View News Groups</a></li>
                    <li><a href="{{ path('newsgroup_new') }}">Create News Groups</a></li>
                    <br>
                    <li class="nav-header">User</li>
                    <li><a href="{{ path('user_show', {'id': app.user.id}) }}">View Profile</a></li>
                    <li><a href="{{ path('user_edit', {'id': app.user.id}) }}">Edit Profile</a></li>
                </ul>
            </div>
            <!--/.well -->
        </div>
        <!--/span-->
        <div class="span9">
            {% block content %}
            {% endblock %}
        </div>
        <!--/span-->
    </div>
    <!--/row-->
    <hr>
    <footer class='footer'>
        <p>&copy; 2013</p>
    </footer>
{% endblock %}