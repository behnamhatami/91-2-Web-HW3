{% extends 'UserBundle:Default:home.html.twig' %}
{% set _locale = app.request.locale %}

{% block content %}
    <form action="{{ path('user_create', {'_locale': _locale}) }}" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>
                {% trans %}User Creation{% endtrans %}
            </legend>
            <div class="text-error">
                {{ form_errors(form) }}
            </div>
            <div class="control-group">
                {{ form_label(form.firstname) }}
                <div class="controls">
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="text-error">{{ form_errors(form.firstname) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.lastname) }}
                <div class="controls">
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="text-error">{{ form_errors(form.lastname) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.showname) }}
                <div class="controls">
                    {{ form_widget(form.showname) }}
                </div>
                <div class="text-error">{{ form_errors(form.showname) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.newsgroups) }}
                <div class="controls">
                    {{ form_widget(form.newsgroups) }}
                </div>
                <div class="text-error">{{ form_errors(form.newsgroups) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.role) }}
                <div class="controls">
                    {{ form_widget(form.role) }}
                </div>
                <div class="text-error">{{ form_errors(form.role) }}</div>
            </div>
            <div class="control-group">
                {{ form_label(form.username) }}
                <div class="controls">
                    {{ form_widget(form.username) }}
                </div>
                <div class="text-error">{{ form_errors(form.username) }}</div>
            </div>
            <div class="control-group">
                <div class="controls">
                    {{ form_widget(form.password) }}
                </div>
                <div class="text-error">{{ form_errors(form.password) }}</div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">
                        {% trans %}create{% endtrans %}
                    </button>
                </div>
            </div>
            {{ form_widget(form._token) }}
        </fieldset>
    </form>
    <ul class="record_actions">
        <li>
            <a href="{{ path('user', {'_locale': _locale}) }}">
                {% trans %}Back to the list{% endtrans %}
            </a>
        </li>
    </ul>
{% endblock %}
